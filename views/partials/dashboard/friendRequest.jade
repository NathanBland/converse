.mdl-card.mdl-shadow--2dp
  .mdl-card__title
    h2.mdl-card__title-text= notification.title
  .mdl-card__supporting-text
    p= notification.content.message  
  .mdl-card__actions.mdl-card--border.request
    form(method='post', action='/dashboard/friend/confirm')
      input(type='hidden', name='person', value='#{notification.content.created_by}')
      button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit') Confirm
    form(method='post', action='/dashboard/friend/deny/')
      input(type='hidden', name='person', value='#{notification.content.created_by}')
      button.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(type='submit') Ignore
