extends ../layout.jade

block content
  div.content
    .mdl-card.mdl-shadow--4dp
      .mdl-card__title
        h2.mdl-card__title-text Forgot Password
      .mdl-card__supporting-text
        p An email has been sent to #{email}. Please follow the instructions in the email to continue.
      .mdl-card__actions
        a.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(href='/') Home
