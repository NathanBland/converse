.mdl-card.mdl-shadow--2dp
  .mdl-card__title
    .mdl-card__title-text User Details
  .mdl-card__supporting-text
    form(method='post' action='/profile/displayname')
      .mdl-layout
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          input#signUp__email.mdl-textfield__input(type='text',name='username',value="#{user.displayName}")
          label.mdl-textfield__label(for='signUp__email') Display Name
      a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect Save
    .mdl-card__menu
      button.mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect
        i.material-icons settings
