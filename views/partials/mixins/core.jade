mixin card(title, actions)
  .mdl-card.mdl-shadow--2dp
    .mdl-card__title
      h2.mdl-card__title-text= title
    .mdl-card__supporting-text  
      block
    if actions
      .mdl-card__actions.mdl-card--border
        each action, idx in actions
          a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect #{action}
