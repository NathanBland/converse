.mdl-layout.mdl-js-layout
  header.mdl-layout__header.mdl-layout__header--scroll
    // Top row, always visible
    .mdl-layout__header-row
      // Title
      span.mdl-layout-title 
        a(href='/') #{sitename} 
      .mdl-layout-spacer
      nav.mdl-navigation
          a.mdl-navigation__link(href='/login') Login
          a.mdl-navigation__link(href='/signup') Sign Up
  .mdl-layout__drawer
  
    span.mdl-layout-title #{sitename}
    nav.mdl-navigation
      a.mdl-navigation__link(href='/login') Login
      a.mdl-navigation__link(href='/signUp') Sign up
  if notification
    aside.notification(class='#{notification.severity}') #{notification.message}
  main.mdl-layout__content
    block content
